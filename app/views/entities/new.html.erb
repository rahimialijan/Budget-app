<h3>New Entity</h3>

<%= form_with(model: [@group, @entity]) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :group_id, 'Select Group' %>
    <%= f.collection_select :group_id, @user_groups, :id, :name, { prompt: 'Select a group' }, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Entity', class: 'btn btn-primary' %>
  </div>
<% end %>
