
<div class="main-container">
<div class="nav-container">
<%= form_with(model: [@group, @entity]) do |f| %>
    <nav class="navbar">
        <div class="container-fluid">
        <%= link_to root_path, class: "text-white ml-3" do %>
          <i class="fas fa-arrow-left" style="margin-left: 5px;"></i>
        <% end %>
          <p class="navbar-brand">Create New Transaction</p>
          <a class="navbar-brand"><%= f.submit "save", class:'submit-btn' %></a>
        </div>
      </nav>
      <div class="form-field">
        <div class="form-group">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Transaction Name" %>
        </div>

        <div class="form-group">
        <%= f.text_field :amount, autofocus: true, autocomplete: "name", placeholder: "Enter Amount", class: "form-control" %>
        </div>

        <div class="form-group">
        <label class="name_label">Select Category:</label>
        <%= f.select :group_id, @groups.collect {|u| [u.name.capitalize, u.id] }, class:'form-control' %>
       </div>
      </div>  
    <% end %>
</div>
</div>
